<!--pages/test/test.wxml-->
<!-- 基本使用 -->
<text>Hello Word\n</text>
<text>你好小程序\n</text>

<!-- 默认情况下text中的文本长按是不能选中的 -->
<text selectable="{{true}}">Hellow coderzc\n</text>
<text selectable>Hellow coderzc\n</text>

<!-- space：决定文本中的空格大小 -->
<!-- ensp：半个中文字符的大小 -->
<!-- emsp：一个中文字符的大小 -->
<text selectable >Hellow coderzc\n</text>
<text selectable space="nbsp">Hellow coderzc\n</text>
<text selectable space="ensp">Hellow coderzc\n</text>
<text selectable space="emsp">Hellow coderzc\n</text>


<!-- decode属性：是否解码文本 -->
<text>5 &gt; 3\n</text>
<text decode>5 &gt; 3\n</text>